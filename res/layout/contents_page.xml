<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:background="#080819"
    
    >
    <include 
        layout = "@layout/bottom_bar" 
        android:id="@+id/ContentsPageInclude" />
    
    <TextView 
        android:layout_below="@+id/ContentsPageInclude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Contents"
        android:textSize="30sp"
        android:gravity="center"
        android:id="@+id/ContentsPageTitle"
        android:paddingBottom="20dp"
        android:textColor="#ffffff"
        />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" 
	    android:id="@+id/contentsLinearLayout"
	    android:layout_below="@+id/ContentsPageTitle"
	    >
	    
    </LinearLayout>
</RelativeLayout>
